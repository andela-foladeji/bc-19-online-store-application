<div class="row">
  <div class="col-md-12">
    <h2>Dashboard</h2>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-md-2 col-md-offset-3" style="background:#e4e4e4">
    <h3 class="text-center">Number of Stores</h3>
    <h2 class="text-center"><%= storenumber %></h2>
    <p class="text-center"><a href="/stores">View stores</a></p>
  </div>

  <div class="col-md-2 col-md-offset-1" style="background:#e4e4e4">
    <h3 class="text-center">Number of Products</h3>
    <%
      numberofproducts = 0;
      productcat.forEach(function(eachCat) {
        numberofproducts += eachCat.numberofproducts;
      })
    %>
    <h2 class="text-center"><%= numberofproducts %></h2>
    <p class="text-center"><a href="/products">View products</a></p>
  </div>
</div>

<div class="clearfix"></div>
<br/>
<div class="table-responsive col-md-5 col-md-offset-3">
  <table class="table table-hover table-striped table-bordered">
    <thead>
      <tr>
        <td>Category</td>
        <td>Number of products</td>
      </tr>
    </thead>
    <tbody>
      <% productcat.forEach(function(eachCat) { %>
        <tr><td><%= eachCat.category_name %></td><td class="numofprod"><%= eachCat.numberofproducts %></td></tr>
      <% }) %>
    </tbody>
  </table>
</div>